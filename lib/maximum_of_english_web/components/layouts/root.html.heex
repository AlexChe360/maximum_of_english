<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Maximum of English">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.6/Sortable.min.js"></script>
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body>
    <nav class="navbar bg-base-200 px-4 sm:px-6 lg:px-8">
      <div class="flex-1">
        <a href="/" class="btn btn-ghost text-xl font-bold text-primary">
          Maximum of English
        </a>
      </div>
      <div class="flex-none">
        <ul class="menu menu-horizontal gap-2 items-center">
          <li><MaximumOfEnglishWeb.Layouts.theme_toggle /></li>
          <li><MaximumOfEnglishWeb.Components.LocaleSwitcher.locale_switcher conn={@conn} /></li>
          <%= if @current_scope && @current_scope.user do %>
            <li class="text-sm opacity-70">{@current_scope.user.email}</li>
            <%= if @current_scope.user.role == "admin" do %>
              <li><.link href={~p"/admin"} class="btn btn-sm btn-ghost">Admin</.link></li>
            <% else %>
              <li><.link href={~p"/dashboard"} class="btn btn-sm btn-ghost">{Gettext.gettext(MaximumOfEnglishWeb.Gettext, "Dashboard")}</.link></li>
            <% end %>
            <li><.link href={~p"/users/settings"} class="btn btn-sm btn-ghost">{Gettext.gettext(MaximumOfEnglishWeb.Gettext, "Settings")}</.link></li>
            <li><.link href={~p"/users/log-out"} method="delete" class="btn btn-sm btn-ghost">{Gettext.gettext(MaximumOfEnglishWeb.Gettext, "Log out")}</.link></li>
          <% else %>
            <li><.link href={~p"/users/log-in"} class="btn btn-sm btn-primary">{Gettext.gettext(MaximumOfEnglishWeb.Gettext, "Log in")}</.link></li>
          <% end %>
        </ul>
      </div>
    </nav>
    {@inner_content}
  </body>
</html>
